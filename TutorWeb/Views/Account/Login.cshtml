@using System.Linq
@model LoginViewModel
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="site-section" style="margin-top:200px; margin-bottom:200px">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-6 mb-12">
                <h1 class="mb-2 text-center">Đăng nhập</h1>
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div class="p-5 bg-white border">
                        <div class="row form-group">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <div class="check-title">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-envelope col-1" style="width:40px;"></i> </span>
                            </div>
                            <input type="text" asp-for="Email" id="email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-lock col-1" style="width:40px;"></i> </span>
                            </div>
                            <input type="password" asp-for="Password" id="password_login" class="form-control"
                                   placeholder="Mật khẩu">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block btn-lg">
                                <i class="fa fa-sign-in"></i>
                                Đăng nhập
                            </button>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-check">
                                <label class="inline" asp-for="RememberMe">
                                    <input type="checkbox" class="form-check-input" asp-for="RememberMe" />
                                    Nhớ đăng nhập
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
                <h1></h1>
                <div class="mt-3 mb-3">
                    <a asp-action="ForgotPassword"><b>Quên mật khẩu ?</b></a>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 mb-12">
                <div class="box-authentication">
                    <h1 class="mb-2 text-center">Đăng ký</h1>
                    <div class="p-5 bg-white border">
                        <div class="form-group text-center">
                            <p>Hãy tiền hành đăng ký tài khoản nếu bạn chưa có !</p>
                            <button onclick="window.location.href='/register.html'"
                                    class="button btn btn-lg btn-primary col-12">
                                <i class="icon-user icons"></i>&nbsp;
                                <span>Đăng ký</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}