@section Styles {
    <link href="~/lib/ckeditor/skins/moono/editor.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/app/controllers/subjects/index.js"></script>
    <script>
        var subjects = new subjectsController();
        subjects.initialize();
    </script>
}

<div class="page-title">
    <div class="title_left">
        <h3>Danh Sách Môn Học</h3>
    </div>

    <div class="title_right">
    </div>
</div>

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_content">
                <div class="panel panel-default table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center" width="5%">STT</th>
                                <th class="text-center">Mã môn</th>
                                <th class="text-center">Tên</th>
                                <th class="text-center">Ngày đăng</th>
                                <th class="text-center" width="9%"></th>
                            </tr>
                        </thead>
                        <tbody id="tblContent">
                        </tbody>
                    </table>
                </div>
                <!--Pagination-->
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                            <select id="ddlShowPage">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                bản ghi/trang.
                            </span>
                            Tổng số bản ghi: <strong id="lblTotalRecords"></strong>
                        </div>
                    </div><div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <th scope="row">{{STT}}</th>
        <th>{{Code}}</th>
        <th>{{Name}}</th>
        <th class="text-center">{{{DateCreated}}}</th>
        <th>
            @* Button detail *@
            <button class="btn btn-sm btn-warning btn-hide" data-id="{{Id}}" title="Sửa"><i class="fa fa-pencil"></i></button>
            <button class="btn btn-sm btn-danger btn-delete" data-id="{{Id}}" title="Xóa"><i class="fa fa-trash"></i></button>
        </th>
    </tr>
</script>
